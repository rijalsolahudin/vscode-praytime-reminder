{
  "name": "praytime-reminder",
  "displayName": "PrayTime Reminder",
  "description": "PrayTime Reminder is a Visual Studio Code extension designed for Muslim developers to help you never miss a prayer (sholat) while working.",
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "PrayTime Reminder",
      "properties": {
        "praytime-reminder.enableAdzanSound": {
          "type": "boolean",
          "default": true,
          "description": "Aktifkan suara adzan saat waktu sholat tiba"
        },
        "praytime-reminder.enableSoonNotification": {
          "type": "boolean",
          "default": true,
          "description": "Aktifkan notifikasi sebelum waktu adzan"
        },
        "praytime-reminder.soonNotificationMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 30,
          "description": "Berapa menit sebelum adzan untuk menampilkan notifikasi (1-30 menit)"
        }
      }
    },
    "commands": [
      {
        "command": "praytime-reminder.openSettings",
        "title": "PrayTime Reminder : Buka PrayTime Reminder"
      },
      {
        "command": "praytime-reminder.stopAdzan",
        "title": "PrayTime Reminder : Stop Adzan Audio"
      }
    ],
    "keybindings": [
      {
        "command": "praytime-reminder.testAdzan",
        "key": "ctrl+shift+f9",
        "mac": "cmd+shift+f9"
      },
      {
        "command": "praytime-reminder.testSoonNotification",
        "key": "ctrl+shift+f10",
        "mac": "cmd+shift+f10"
      }
    ],
    "icons": {
      "praytime-logo": {
        "description": "PrayTime Logo",
        "default": {
          "fontPath": "images/praytime.woff",
          "fontCharacter": "\\e900"
        }
      }
    }
  },
  "scripts": {
    "copy-assets": "mkdir -p out/assets && cp src/assets/*.json out/assets/ && cp src/assets/adzan-mekkah.wav out/assets/ || true",
    "copy-webview": "mkdir -p out/webview && cp src/webview/webview.html out/webview/ && cp src/webview/webview.css out/webview/ && cp src/webview/webview.js out/webview/",
    "compile": "tsc -p ./ && pnpm run copy-assets && pnpm run copy-webview",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "icon": "images/icon.png",
  "publisher": "rijal-solahudin",
  "repository": {
    "type": "git",
    "url": "https://github.com/rijalsolahudin/vscode-praytime-reminder"
  },
  "license": "MIT",
  "dependencies": {
    "@types/play-sound": "^1.1.2",
    "play-sound": "^1.1.6"
  }
}
